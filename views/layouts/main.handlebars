  <body class="overflow-x-hidden bg-gray-100">
    <header
      class="fixed top-0 left-0 z-10 w-screen bg-white h-20 flex items-center justify-center shadow"
    >
      <div
        class="w-full h-full bg-white z-5 max-w-screen-2xl px-5 flex justify-between items-center"
      >
        <a href="/"><img
            src="/images/logo.png"
            alt="Logo Krust Burguer"
            class="w-36 md:w-44"
          /></a>
        <ul
          class="hidden items-center gap-5 font-semibold group transition text-lg lg:flex"
        >
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Cardápio</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Sobre</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Contato</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Delivery</li>
          </a>
        </ul>
        <div class="flex items-center gap-7">
          <div class="flex items-center gap-3 md:gap-5">
            <a href="#" class="relative">
              <i class="fa-solid fa-basket-shopping text-2xl"></i>
              <div
                class="absolute -top-3 -right-3 w-5 h-5 rounded-full bg-red-500 flex items-center justify-center text-white font-semibold text-sm p-1"
              >
                <span>0</span>
              </div>
            </a>
            <div class="hidden items-center gap-3 md:gap-5 lg:flex">
              <a
                href="/"
                class="border border-red-500 rounded-full px-8 py-1 font-semibold"
              >Login</a>
              <a
                href="/"
                class="border border-red-500 bg-red-500 px-8 py-1 rounded-full text-white font-semibold"
              >Cadastre-se</a>
            </div>
          </div>
          <div class="flex lg:hidden cursor-pointer">
            <i id="cesta" class="fa-solid fa-bars text-3xl text-red-500"></i>
          </div>
        </div>
      </div>
      <div
        id="menu-mobile"
        class="absolute -z-10 disable-menu flex flex-col w-full p-5 border-b gap-5 transition-all duration-200 ease-in-out lg:hidden bg-white"
      >
        <ul
          class="flex flex-col items-start gap-3 font-semibold group transition text-lg"
        >
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Cardápio</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Sobre</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Contato</li>
          </a>
          <a href="#" class="hover:text-red-500 ease-in-out duration-300">
            <li>Delivery</li>
          </a>
        </ul>
        <div class="flex flex-col items-start gap-3">
          <a
            class="border border-red-500 rounded-full px-6 py-1 font-semibold"
          >Login</a>
          <a
            class="border border-red-500 bg-red-500 px-6 py-1 rounded-full text-white font-semibold"
          >Cadastre-se</a>
        </div>
      </div>
